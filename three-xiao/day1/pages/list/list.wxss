/* pages/list/list.wxss */

.swiper{
  width: 100%;
  height: 200px;
}
swiper{
  width: 100%;
  height: 100%;
}
swiper-item{
  width: 100%;
  height: 100%;
}
swiper-item image{
  width: 100%;
  height: 100%;
} 

.one{
  height: 120px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solid #ccc;
}
.one image{
  width: 120rpx;
  height: 180rpx;
}
.one .main{
  width: 400rpx;
  font-size: 12px;
  color: #797d82;
}
.one .main view:nth-child(1){
  font-size: 16px;
  /* font-weight: 700; */
}
.one .main .actors{
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
